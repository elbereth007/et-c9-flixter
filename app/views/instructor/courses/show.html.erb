<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <br/>
  
<!-- next 2 lines added to preview course page as students would see it -->
  <%= link_to 'Preview As Student...', course_path(@course), class: 'btn btn-warning float-right' %>
  <br class="clr" />
  
<!-- next 2 lines replaced by 3 lines below them for new section form -->
<!--  <h2 class="text-center"><%= @course.description %></h2>
  <h3 class="text-center"><%= @course.cost %></h3>  -->
  <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-lg' %>
  </div>
  
  <ul>
    <% @course.sections.each do |section| %>
      <li>
        <%= section.title %>
        
<!-- next lines added 17 jun 17 for lesson form -->
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right btn btn-primary btn-sm' %>
       <ul>
          <% section.lessons.each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class="clr" />
      </li>
    <% end %>
  </ul>
  
</div>
