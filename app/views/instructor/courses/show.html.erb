<!-- modified 4 jul 17 for lesson 31 -->
<script>
  $(function() {
    $('.lessons').sortable({
      update: function( event, ui ) {
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update-url'),
          dataType: 'json',
          data: { lesson: { row_order_position: ui.item.index() } }
        });
      }
    });
  });
</script>

<!-- next 13 lines added 6 jul 17 (lesson/challenge 32) -->
<script>
  $(function() {
    $('.sections').sortable({
      update: function( event, ui ) {
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update-url'),
          dataType: 'json',
          data: { section: { row_order_position: ui.item.index() } }
        });
      }
    });
  });
</script>

<br />
<div class="booyah-box col-10 offset-1">

<!-- next line added 21 jun 17 -->
  <h1 class="text-center"><%= current_course.title %></h1>
  <br/>

<!-- next line added 24 jun 17 for displaying images - lesson 22 (challenge) -->
  <%= image_tag current_course.image, class: 'img-fluid' %>   <!-- shows image on course page -->
  
<!-- next 2 lines added to preview course page as students would see it -->

<!-- next line added 21 jun 17 -->
  <%= link_to 'Preview As Student...', course_path(current_course), class: 'btn btn-warning float-right' %>
  <br class="clr" />
  
<!-- next 2 lines replaced by 3 lines below them for new section form -->

  <div class="text-center">
<!-- next line added 21 jun 17 -->

  <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-lg' %>
  </div>
  
  <ul class="sections">   <!-- class="sections" added 6 jul 17 for lesson/challenge 32 -->

    <% current_course.sections.rank(:row_order).each do |section| %>   <!-- rank(:row_order) added 6 jul 17 for lesson/challenge 32 -->
      <li data-update-url="<%= instructor_section_path(section) %>">    <!-- data update url added 6 jul 17 (lesson/challenge 32) -->
        <%= section.title %>
        
<!-- next lines added 17 jun 17 for lesson form -->
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right btn btn-primary btn-sm' %>
       <ul class="lessons">     <!-- class added 3 jul 17 (lesson 31) -->
          <% section.lessons.rank(:row_order).each do |lesson| %>
            <li data-update-url="<%= instructor_lesson_path(lesson) %>">    <!-- data update url added 4 jul 17 (lesson 31) -->
<!--            <li data-item-id=<%= lesson.id %>>       data item added 3 jul 17 (lesson 31) -->
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class="clr" />
      </li>
    <% end %>
  </ul>
  
</div>
